        <div class="container-fluid">
            <div class="row justify-content-center main-panel">
                <div class="col-md-5 page-content">
                    <h1>Add Record</h1>
                    <hr>
                    <form class=" signin" action="upload" method = "post" enctype="multipart/form-data" id="submitRecord">
                        <div class="form-group">
                            <label for="login">Patient Name</label>
                            <input type="text" class="form-control" id="login" placeholder="First Name" name="firstName" style="margin-bottom: 5px">
                            <input type="text" class="form-control" id="login1" placeholder="Last Name" name="lastName">
                                    <label for="inputTestType" style="margin-top: 5px">Test Type</label>
                                    <select name = "testType" id="inputTestType" class="form-control">
                                        <option selected>X-ray</option>
                                        <option>Drug Test</option>
                                        <option>Blood Test</option>
                                        <option>Blood Pressure</option>
                                        <option>Dental Examination</option>
                                    </select>
                        </div>
                        <div class="form-row">
                        <div class="form-group col-md-5">
                                <label for="inputMonth">Month</label>
                                <select name = "month" id="inputMonth" class="form-control">
                                    <option selected>January</option>
                                    <option>February</option>
                                    <option>March</option>
                                    <option>April</option>
                                    <option>May</option>
                                    <option>June</option>
                                    <option>July</option>
                                    <option>August</option>
                                    <option>September</option>
                                    <option>October</option>
                                    <option>November</option>
                                    <option>December</option>
                                </select>
                        </div>
                        <div class="form-group col-md-3">
                                <label for="inputDay">Day</label>
                                <select name = "day" id="inputDay" class="form-control">
                                    
                                </select>
                        </div>
                        <div class="form-group col-md-4">
                                <label for="inputYear">Year</label>
                                <select name="year" id="inputYear" class="form-control">
                                </select>
                        </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                    <input name="fileHA" type="file" id="fileAttach">
                                <!-- <div class="custom-file">
                                    <input type="hidden" class="custom-file-input" id="inputGroupFile02" name="attach">
                                </div> -->
                                <div class="input-group-append">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Findings</label>
                            <input type="text" class="form-control" id="login2" placeholder="Enter finding..." name="findings" style="margin-bottom: 10px">
                            <input type="submit" class="form-control btn btn-primary" value="Submit">
                        </div>
                    </form>
                </div>
            </div>
        </div>
